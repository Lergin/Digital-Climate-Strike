FROM node:14-alpine

RUN apk update && apk add build-base git python
WORKDIR /var/src/app

COPY ./ .

RUN npm install

EXPOSE 8081
ENV PORT 8081
ENV NODE_ENV production

CMD ["yarn", "start"]